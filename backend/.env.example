# 应用基础配置
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
ENCRYPTION_KEY=dev-encryption-key-change-in-production

# 数据库配置
DATABASE_URL=sqlite:///coding_efficiency.db
SQLALCHEMY_ECHO=false

# 阿里云效API配置
ALIYUNXIAO_API_BASE_URL=https://devops.aliyun.com/api/v3
ALIYUNXIAO_ACCESS_TOKEN=your_aliyunxiao_access_token_here
ALIYUNXIAO_ORGANIZATION_ID=your_organization_id_here

# Redis缓存配置（可选）
REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/0

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# 限流配置
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100 per hour

# 文件上传配置
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# 分页配置
PER_PAGE_DEFAULT=20
PER_PAGE_MAX=100

# 数据同步配置
SYNC_BATCH_SIZE=100
SYNC_RETRY_TIMES=3
SYNC_RETRY_DELAY=5

# 监控配置
MONITORING_ENABLED=false
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# 安全配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT配置
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
JWT_ALGORITHM=HS256

# API配置
API_TITLE=Coding Efficiency API
API_VERSION=1.0.0
API_DESCRIPTION=编程效率统计分析系统API